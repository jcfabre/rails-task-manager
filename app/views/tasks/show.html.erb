<div class="container">
  <div class="d-flex justify-content-between">
    <h1> <%= @task.title %> </h1>
    <%= link_to edit_task_path(@task) do %>
      <button type="button" class="btn btn-outline-dark">
        <i class="fas fa-pen"> Edit this task</i>
      </button>
    <% end %>
  </div>

  <blockquote>
    <%= @task.details %>
  </blockquote>


  <p>
    <% if @task.completed %>
        <i class="fas fa-check-square">This task is completed</i>
      <% else %>
        <i class="far fa-square">This task is not completed yet</i>
      <% end %>
  </p>

  <%= link_to "Back to list", tasks_path %>
</div>


