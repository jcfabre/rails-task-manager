<div class="row">
  <div class="col-12 col-sm-9 col-md-4">
    <%= form_for @task do |f|  %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :details %>
          <%= f.text_field :details, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.hidden_field :completed, value: false %>
        </div>
          <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
